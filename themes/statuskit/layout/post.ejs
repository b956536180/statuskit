<% if (page.degree === 1) { %>
    <h1 class="text-success text-center mb-1"><%= page.title %></h1>
<% } else if (page.degree === 2) { %>
    <h1 class="text-primary text-center mb-1"><%= page.title %></h1>
<% } else if (page.degree === 3) { %>
    <h1 class="text-warning text-center mb-1"><%= page.title %></h1>
<% } else if (page.degree === 4) { %>
    <h1 class="text-error text-center mb-1"><%= page.title %></h1>
<% } else { %>
    <h1 class="text-center mb-1"><%= page.title %></h1>
<% } %>
<h3 class="text-center text-gray"><%= page.type %></h3>

<div class="stk-incident-post-body col-mx-auto">
<%- page.content %>
<br>
<div class="divider my-2"></div>
<a class="mt-2" href="/">Back to Current Status</a>
</div>

